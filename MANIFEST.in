# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include setup.py

# Include templates and scripts
recursive-include src/orkestra/templates *
recursive-include src/orkestra/scripts *.sh
recursive-include src/orkestra/config *.json
recursive-include src/orkestra/config *.env.example

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.log
